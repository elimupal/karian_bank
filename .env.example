# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Master Database
MASTER_DATABASE_URL=postgresql://postgres:password@localhost:5432/bank_master

# Tenant Database Template
TENANT_DATABASE_URL=postgresql://postgres:password@localhost:5432/bank_tenant_template

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (for caching, sessions, and token blacklist)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TOKEN_BLACKLIST_DB=1

# Email Configuration (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM=noreply@corebanking.com
EMAIL_FROM_NAME=Core Banking API

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-this

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload
MAX_FILE_SIZE_MB=10

# Email (Optional - for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# Payment Gateway (Mock)
PAYMENT_GATEWAY_URL=http://localhost:4000
PAYMENT_GATEWAY_API_KEY=mock-api-key

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this
